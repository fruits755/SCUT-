/* 搜索框 */

.search {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 80rpx;
  background-color: #f1f1f1;
  border: 1rpx solid white;
  border-radius: 20rpx;
}

.search input {
  width: 100%;
  font-size: 27rpx;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  padding-left: 30rpx;
}

/* 搜索框小图标 */

.search image {
  width: 40rpx;
  height: 40rpx;
  padding-left: 20rpx;
  padding-right: 30rpx;
}

/* 用户信息 */

.userInfo {
  display: flex;
}

.userInfo image {
  width: 100rpx;
  margin: 10rpx;
  border-radius: 500rpx;
}

.userInfo_q {
  display: flex;
  flex-direction: column;
}

.userInfo_q_t {
  background-color: #d2f1f0;
  border-radius: 10rpx;
  margin-top: 10rpx;
  font-size: 30rpx;
}

/* 全局 */

.total {
  background-color: #f1f1f1;
}

/* block块中信息 */

.inf {
  display: block;
  background-color: white;
  overflow: hidden;
  border-radius: 10rpx;
  margin: 10rpx;
}

/* 发布的问题 */

.question {
  font-size: 34rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-bottom: 30rpx;
}

/* 评论 */

.comment {
  float: right;
  display: flex;
  margin-right: 20rpx;
  margin-bottom: 10rpx;
  font-size:28rpx;
}

.comment image {
  width: 50rpx;
}

.comment text {
  font-size: 30rpx;
  margin-top: 7rpx;
}

/* 发布时间 */

.time {
  float: left;
  font-size: 28rpx;
  margin-left: 20rpx;
}
